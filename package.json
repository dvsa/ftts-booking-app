{
  "name": "ftts-booking-app",
  "description": "Booking application",
  "version": "0.0.2",
  "private": true,
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run generate-frontend-assets",
    "build:local": "npm run clean && tsc && npm run postbuild",
    "postbuild": "cpy 'function.json' 'host.json' dist/ && npm run copy && npm run minify",
    "clean": "rimraf dist",
    "generate-frontend-assets": "pushd ftts-frontend-assets && npm install && gulp generate-assets && popd",
    "copy": "npm run copy:assets && npm run copy:local-njk && npm run copy:govuk-njk",
    "copy:assets": "cp -r ftts-frontend-assets/public dist/",
    "copy:govuk-njk": "cpy '**/*.njk' '../../dist/src/views' --cwd=node_modules/govuk-frontend --parents",
    "copy:local-njk": "cpy '**/*.njk' '../../dist/src/views' --cwd=src/views --parents",
    "func:start": "npm run build && func extensions install && func start --port 8888",
    "start": "npm run local:dev",
    "local:dev": "tsc --incremental && npm run copy:local-njk && node dist/server.local.js",
    "local:watch": "nodemon",
    "local:debug": "tsc --sourceMap && npm run copy:local-njk && node --inspect dist/server.local.js",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "lint:report": "eslint --ext .js,.ts . -f json -o lint/report.json",
    "minify": "node build/minify",
    "test": "jest ./tests/unit/.*.test.ts",
    "test:unit": "jest --verbose ./tests/unit/.*.test.ts",
    "test:watch": "jest --verbose ./tests/unit/.*.test.ts --watch",
    "test:int": "jest --setupFiles dotenv/config --verbose ./tests/integration/.*.test.ts",
    "test:e2e": "testcafe chrome:headless tests/e2e/ui --hostname 127.0.0.1 --reporter spec,xunit:report.xml,html:report.html --screenshots takeOnFails=true --selector-timeout 90000 --skip-js-errors",
    "test:coverage": "jest --verbose --coverage ./tests/unit/.*.test.ts",
    "test-ci": "npm run lint && jest --ci --reporters=jest-junit --reporters=jest-standard-reporter ./tests/unit/.*.test.ts",
    "coverage-ci": "jest --reporters=jest-standard-reporter --coverage ./tests/unit/.*.test.ts",
    "test:accessibility": "testcafe chrome:headless tests/e2e/accessibility --hostname 127.0.0.1 --reporter spec,xunit:report.xml,html:report.html",
    "start:mock-server": "ts-node tests/mocks/server.ts"
  },
  "dependencies": {
    "@azure/identity": "1.2.2",
    "@dvsa/azure-logger": "3.0.6",
    "@dvsa/cds-retry": "0.0.14",
    "@dvsa/ftts-auth-client": "1.0.1",
    "@dvsa/ftts-payment-api-model": "0.2.6",
    "aws-serverless-express": "3.3.8",
    "axios": "0.21.1",
    "axios-retry": "3.1.9",
    "body-parser": "1.19.0",
    "connect-redis": "5.0.0",
    "cookie-session": "2.0.0-rc.1",
    "cors": "2.8.5",
    "dayjs": "1.9.6",
    "dotenv": "8.2.0",
    "dynamics-web-api": "1.6.11",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "express-validator": "6.9.2",
    "express-writer": "0.0.4",
    "govuk-frontend": "3.10.2",
    "helmet": "4.6.0",
    "i18next": "19.8.3",
    "i18next-browser-languagedetector": "6.0.1",
    "minify": "6.0.1",
    "nunjucks": "3.2.2",
    "qs": "6.9.4",
    "redis": "3.0.2",
    "ts-dedent": "2.0.0",
    "uuid": "8.3.1",
    "xss-filters": "1.2.7"
  },
  "devDependencies": {
    "@azure/functions": "1.2.2",
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@dvsa/eslint-config-ts": "1.0.1",
    "@dvsa/ftts-crm-test-client": "1.0.3",
    "@testcafe-community/axe": "3.4.2",
    "@types/aws-serverless-express": "3.3.3",
    "@types/body-parser": "1.19.0",
    "@types/connect-redis": "0.0.14",
    "@types/cors": "2.8.8",
    "@types/express": "4.17.8",
    "@types/express-session": "1.17.0",
    "@types/jest": "26.0.15",
    "@types/json-server": "0.14.2",
    "@types/minify": "6.0.0",
    "@types/node": "14.14.6",
    "@types/nunjucks": "3.1.3",
    "@types/redis": "2.8.22",
    "@types/supertest": "2.0.10",
    "@types/uuid": "8.3.0",
    "@types/xss-filters": "0.0.27",
    "axe-core": "4.0.2",
    "axe-html-reporter": "2.0.1",
    "babel-jest": "26.6.3",
    "cpy-cli": "3.1.1",
    "eslint": "7.2.0",
    "gulp": "4.0.2",
    "gulp-clean": "0.4.0",
    "gulp-dart-sass": "1.0.2",
    "gulp-nodemon": "2.5.0",
    "gulp-run-command": "0.0.10",
    "gulp-sourcemaps": "2.6.5",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "jest-mock-extended": "1.0.10",
    "jest-standard-reporter": "2.0.0",
    "json-server": "0.16.2",
    "merge-stream": "2.0.0",
    "mockdate": "3.0.2",
    "nock": "13.0.5",
    "nodemon": "2.0.6",
    "npm-check-updates": "9.2.4",
    "require-dir": "1.2.0",
    "rimraf": "3.0.2",
    "supertest": "6.0.0",
    "testcafe": "1.9.4",
    "testcafe-browser-provider-browserstack": "1.13.1",
    "testcafe-reporter-html": "1.4.6",
    "testcafe-reporter-xunit": "2.1.0",
    "ts-jest": "26.4.3",
    "ts-node": "9.0.0",
    "typescript": "3.9.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": [
      "./tests/unit/.*.test.ts$",
      "./tests/integration/.*.test.ts$"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "app.ts"
    ],
    "coverageReporters": [
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "setupFiles": [
      "<rootDir>/setup-jest.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "greenkeeper": {
    "ignore": [
      "nunjucks"
    ]
  }
}
