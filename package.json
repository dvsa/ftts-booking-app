{
  "name": "ftts-booking-app",
  "description": "Booking application",
  "version": "0.0.2",
  "private": true,
  "engines": {
    "node": ">=14.18.0",
    "npm": ">=7.20"
  },
  "scripts": {
    "audit": "npm audit --registry https://registry.npmjs.org/",
    "audit:fix": "npm audit fix --registry https://registry.npmjs.org/",
    "audit:fix-force": "npm audit fix --force --registry https://registry.npmjs.org/",
    "build": "npm run clean && tsc && tsc-alias",
    "clean": "rimraf dist",
    "copy": "npm run copy:assets && npm run copy:local-njk && npm run copy:govuk-njk && npm run copy-data",
    "copy:assets": "cp -R ftts-frontend-assets/assets dist && cp -R node_modules/govuk-frontend/govuk/assets/fonts dist/assets/fonts",
    "copy:govuk-njk": "cpy 'node_modules/govuk-frontend/**/*.njk' 'dist/nunjucks-govuk'",
    "copy:local-njk": "cpy 'src/**/*.njk' 'dist/'",
    "copy-config": "cp local.settings.example.json local.settings.json",
    "copy-data": "cp -R src/services/crm-gateway/data dist/src/services/crm-gateway/data",
    "coverage-ci": "jest --coverage ./tests/unit/.*.test.ts --reporters=jest-junit --reporters=jest-standard-reporter --ci",
    "func:start": "npm run build && func extensions install && func start --port 8888",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "lint:report": "eslint --ext .js,.ts . -f json -o lint/report.json",
    "local:debug": "tsc --sourceMap && tsc-alias && npm run copy:local-njk && npm run copy-data && node --inspect  -r dotenv/config dist/server.local.js",
    "local:dev": "tsc --incremental && tsc-alias && node -r dotenv/config dist/server.local.js",
    "local:watch": "nodemon",
    "minify-js": "node build/minify",
    "postbuild": "cpy 'function.json' 'host.json' dist/ && npm run copy && npm run sass-gb && npm run sass-ni && npm run minify-js",
    "sass-gb": "sass --style=compressed ftts-frontend-assets/src/sass/booking.scss dist/assets/stylesheets/booking.css",
    "sass-ni": "sass --style=compressed ftts-frontend-assets/src/sass/ni.scss dist/assets/stylesheets/ni.css",
    "start": "npm run build && node -r dotenv/config dist/server.local.js",
    "start:mock-server": "ts-node tests/mocks/server.ts",
    "test": "jest ./tests/unit/.*.test.ts",
    "test:accessibility": "testcafe chrome:headless tests/e2e/accessibility --hostname 127.0.0.1 --reporter spec,xunit:report.xml,html:report.html --compiler-options typescript.configPath=tsconfig.test.json –-disable-page-caching --skip-js-errors",
    "test:coverage": "jest --verbose --coverage ./tests/unit/.*.test.ts",
    "test:e2e": "testcafe chrome:headless tests/e2e/ui --hostname 127.0.0.1 --reporter spec,xunit:report.xml,html:report.html --screenshots takeOnFails=true --selector-timeout 120000 --assertion-timeout 60000 --skip-js-errors --disable-multiple-windows --compiler-options typescript.configPath=tsconfig.test.json –-disable-page-caching",
    "test:int": "jest --setupFiles dotenv/config --verbose ./tests/integration/.*.test.ts --reporters=jest-junit --reporters=jest-standard-reporter",
    "test:unit": "jest --verbose ./tests/unit/.*.test.ts",
    "test:watch": "jest --verbose ./tests/unit/.*.test.ts --watch"
  },
  "dependencies": {
    "@azure/functions": "2.0.0",
    "@dvsa/azure-logger": "5.2.0",
    "@dvsa/cds-retry": "1.0.0",
    "@dvsa/egress-filtering": "4.0.2",
    "@dvsa/ftts-auth-client": "5.0.2",
    "@dvsa/ftts-eligibility-api-model": "1.0.0",
    "@dvsa/ftts-payment-api-model": "1.2.2",
    "aws-serverless-express": "3.4.0",
    "axios": "0.24.0",
    "axios-retry": "3.2.4",
    "body-parser": "1.19.0",
    "cls-hooked": "4.2.2",
    "connect-redis": "6.0.0",
    "cookie": "0.4.1",
    "cookie-parser": "1.4.6",
    "cookie-session": "2.0.0-rc.1",
    "cors": "2.8.5",
    "csurf": "1.11.0",
    "dayjs": "1.10.7",
    "dynamics-web-api": "1.7.4",
    "escape-html": "1.0.3",
    "express": "4.17.1",
    "express-session": "1.17.2",
    "express-validator": "6.13.0",
    "express-writer": "0.0.4",
    "govuk-frontend": "3.14.0",
    "helmet": "4.6.0",
    "i18next": "20.6.1",
    "i18next-browser-languagedetector": "6.1.2",
    "nidirect-frontend": "2.0.0",
    "nunjucks": "3.2.3",
    "qs": "6.10.1",
    "queueit-knownuser": "3.6.4",
    "redis": "3.1.2",
    "ts-dedent": "2.2.0",
    "uuid": "8.3.2",
    "xss-filters": "1.2.7"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-proposal-class-properties": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@dvsa/eslint-config-ts": "2.0.1",
    "@dvsa/ftts-crm-test-client": "5.1.8",
    "@faker-js/faker": "7.6.0",
    "@jackfranklin/test-data-bot": "2.0.0",
    "@testcafe-community/axe": "3.5.0",
    "@types/aws-serverless-express": "3.3.5",
    "@types/body-parser": "1.19.2",
    "@types/cls-hooked": "4.3.3",
    "@types/connect-redis": "0.0.17",
    "@types/cookie": "0.4.1",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.12",
    "@types/csurf": "1.11.2",
    "@types/escape-html": "1.0.1",
    "@types/estree": "0.0.50",
    "@types/express": "4.17.13",
    "@types/express-session": "1.17.4",
    "@types/jest": "27.0.2",
    "@types/json-server": "0.14.4",
    "@types/minify": "6.0.1",
    "@types/node": "14.14.31",
    "@types/nunjucks": "3.2.0",
    "@types/redis": "2.8.32",
    "@types/uuid": "8.3.1",
    "@types/xss-filters": "0.0.27",
    "axe-core": "4.3.5",
    "axe-html-reporter": "2.2.3",
    "babel-jest": "27.3.1",
    "cpy-cli": "4.1.0",
    "dotenv": "16.0.0",
    "eslint": "7.32.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-testcafe-community": "1.1.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-junit": "13.0.0",
    "jest-mock-extended": "2.0.4",
    "jest-standard-reporter": "2.0.0",
    "json-server": "0.17.0",
    "merge-stream": "2.0.0",
    "minify": "6.0.1",
    "mockdate": "3.0.5",
    "nock": "13.2.1",
    "nodemon": "2.0.15",
    "require-dir": "1.2.0",
    "rimraf": "3.0.2",
    "sass": "1.32.13",
    "testcafe": "2.1.0",
    "testcafe-browser-provider-browserstack": "1.14.0",
    "testcafe-reporter-html": "1.4.6",
    "testcafe-reporter-xunit": "2.2.1",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "tsc-alias": "1.7.1",
    "typescript": "4.3.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": [
      "./tests/unit/.*.test.ts$",
      "./tests/integration/.*.test.ts$"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "app.ts"
    ],
    "coverageReporters": [
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "setupFiles": [
      "<rootDir>/setup-jest.js"
    ],
    "globalSetup": "<rootDir>/global-jest-setup.js",
    "moduleNameMapper": {
      "@constants": "<rootDir>/src/constants",
      "@pages/(.*)": "<rootDir>/src/pages/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "greenkeeper": {
    "ignore": [
      "nunjucks"
    ]
  }
}
