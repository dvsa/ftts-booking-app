{% extends "layout.njk" %}

{% block page_title %}
  {{ t('checkYourAnswers.error.heading') }} {{ t('generalContent.pageTitle') }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl" data-automation-id='header'>{{ t('checkYourAnswers.error.heading') }}</h1>
    <p class="govuk-body">
      {{ t('checkYourAnswers.error.general.contentLine1') }}
    </p>
    <p class="govuk-body">
      {{ t('checkYourAnswers.error.general.contentLine2', {
        openLink: '<a href="check-your-details" data-automation-id="retry-link" class="govuk-link">',
        closeLink: '</a>'
      }) | safe }}
      {{ t('checkYourAnswers.error.general.contentLine3') }}
      {{ t('checkYourAnswers.error.general.contentLine4') }}
    </p>
    {% include "enquiries-footer.njk" %}
  </div>
</div>
{% endblock %}
