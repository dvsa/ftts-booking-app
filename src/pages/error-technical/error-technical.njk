{% extends "layout.njk" %}

{% block page_title %}
  {{ t('errors.technical.title') }} {{ t('generalContent.pageTitle') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl">{{ t('errors.technical.heading') }}</h1>
      <p class="govuk-body govuk-!-font-weight-bold">{{ t('errors.technical.description') }}</p>
      <p class="govuk-body">{{ t('errors.technical.startAgain', {
        openLink: '<a href="' + startAgainLink + '" class="govuk-link">',
        closeLink: '</a>'
      }) | nl2br | safe }}</p>
      <p class="govuk-body">{{ t('errors.technical.contact') }} {{ t('errors.technical.contactLinkCaption', {
        openLink: '<a href="' + t('errors.technical.contactLink') + '" class="govuk-link">',
        closeLink: '</a>'
      }) | nl2br | safe }}</p>
    </div>
  </div>
{% endblock %}
