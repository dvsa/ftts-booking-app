{% extends "layout.njk" %}

{% block page_title %}
  {{ t('checkYourAnswers.error.heading') }} {{ t('generalContent.pageTitle') }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">{{ t('checkYourAnswers.error.heading') }}</h1>
    <p class="govuk-body">
      {{ t('checkYourAnswers.error.slotConfirmation.contentLine1', {
        bookingReference: bookingReference
      }) }}
    </p>
    <p class="govuk-body">{{ t('checkYourAnswers.error.slotConfirmation.contentLine2') }}</p>
    <p class="govuk-body">
      {{ t('checkYourAnswers.error.slotConfirmation.contentLine3', {
        openLink: '<a href="' + startAgainLink + '" class="govuk-link">',
        closeLink: '</a>'
      }) | safe }}
    </p>
    {% include "enquiries-footer.njk" %}
  </div>
</div>
{% endblock %}
