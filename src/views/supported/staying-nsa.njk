{% extends "layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block page_title %}
  {{ t('stayingNsa.pageTitle') }} {{ t('generalContent.pageTitle') }}
{% endblock %}

{% block beforeContent %}
  <div role="navigation" aria-label="back">
    {{ govukBackLink({
      text: t('generalContent.back'),
      href: '',
      attributes: { 'data-automation-id': 'back' }
    }) }}
  </div>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl" data-automation-id="heading">{{ t('stayingNsa.pageHeading') }}</h1>
      <p class="govuk-body" data-automation-id="paragraph1">{{ t('stayingNsa.paragraph1') }}</p>
      <p class="govuk-body" data-automation-id="paragraph2">{{ t('stayingNsa.paragraph2') }}</p>
      <p class="govuk-body" data-automation-id="paragraph3">{{ t('stayingNsa.paragraph3') }}</p>
      {{ govukButton({
        text: t('generalContent.continueButton'),
        href: '',
        attributes: { 'data-automation-id': 'continue' }
      }) }}
    </div>
  </div>
{% endblock %}
