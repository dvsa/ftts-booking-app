{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@pages/*": ["src/pages/*"],
    },
  }
}
