{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@pages/*": ["src/pages/*"],
    },
  },
  "include": [
    "src/",
    "app.ts",
    "ftts-booking-app.ts",
    "function.json",
    "host.json",
    "server.local.ts",
  ]
}